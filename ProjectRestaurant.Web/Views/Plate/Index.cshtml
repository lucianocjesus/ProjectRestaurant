@model IEnumerable<ProjectRestaurant.Web.Models.PlateModelView>

@{
    ViewBag.Title = "Lista de Pratos";
}

<h2>Lista de Pratos</h2>

<p>
    @Html.ActionLink("Novo Prato", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameRestaurant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamePlate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredients)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameRestaurant)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamePlate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredients)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {id=item.Id}) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
